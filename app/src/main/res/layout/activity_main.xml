<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Saludar Dia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnDia"
            app:layout_constraintStart_toStartOf="@+id/btnNoche" android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp" android:layout_marginBottom="46dp"
            app:layout_constraintBottom_toTopOf="@+id/btnNoche"/>
    <Button
            android:text="Saludar Noche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnNoche"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="269dp"/>
    <TextView
            android:text="Hola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/texto"
            app:layout_constraintStart_toStartOf="@+id/btnNoche"
            android:layout_marginLeft="35dp" android:layout_marginTop="85dp" android:layout_marginStart="35dp"
            app:layout_constraintTop_toBottomOf="@+id/btnNoche"/>
</androidx.constraintlayout.widget.ConstraintLayout>